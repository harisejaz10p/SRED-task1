{
  "compilerOptions": {
    "target": "ES2020",                
    "module": "commonjs",              
    "outDir": "./dist",                // Compiled JavaScript files will go to the dist/ folder
    "strict": true,                    
    "esModuleInterop": true,           
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true
  },
  "include": ["*.ts"],                 // Include all .ts files in the root directory
  "exclude": ["node_modules"]          // Exclude node_modules folder
}
